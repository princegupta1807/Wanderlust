</div>

<div class="listings-container">
    <div class="listings-grid">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <div class="card-text">
                            <div class="original-price">
                                <span class="price-amount">&#8377;<%= listing.price.toLocaleString("en-IN") %> <small>night</small></span>
                                <span class="tax-info">+ 18% GST</span>
                            </div>
                            <div class="price-with-tax">
                                <span class="price-amount">&#8377;<%= Math.round(listing.price * 1.18).toLocaleString("en-IN") %> <small>night</small></span>
                                <span class="tax-info">includes all taxes</span>
                            </div>
                        </div>
                        <% if (listing.location) { %>
                            <p class="card-location text-muted">
                                <i class="fas fa-map-marker-alt me-1"></i> <%= listing.location %>
                            </p>
                        <% } %>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</div>
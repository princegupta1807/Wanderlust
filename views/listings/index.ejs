
<% layout('/layouts/boilerplate') %>

<script>
function toggleTaxDisplay() {
    const taxToggle = document.getElementById('taxToggle');
    const originalPrices = document.querySelectorAll('.original-price');
    const taxPrices = document.querySelectorAll('.price-with-tax');
    
    if (taxToggle.checked) {
        originalPrices.forEach(el => el.style.display = 'none');
        taxPrices.forEach(el => el.style.display = 'block');
    } else {
        originalPrices.forEach(el => el.style.display = 'block');
        taxPrices.forEach(el => el.style.display = 'none');
    }
}

// Initialize tax display on page load
document.addEventListener('DOMContentLoaded', function() {
    const taxToggle = document.getElementById('taxToggle');
    if (taxToggle) {
        toggleTaxDisplay(); // Set initial state
        taxToggle.addEventListener('change', toggleTaxDisplay);
    }
});
</script>

<style>
